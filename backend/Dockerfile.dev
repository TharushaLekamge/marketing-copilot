# syntax=docker/dockerfile:1.6
# Development Dockerfile with auto-reload and fast pip caching
FROM python:3.11-slim

WORKDIR /app

# Helpful envs (don't disable pip cache in dev)
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# System dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    curl \
  && rm -rf /var/lib/apt/lists/*

# Copy only dependency files first for better layer caching
COPY backend/requirements.txt /app/requirements.txt
COPY backend/requirements-ml.txt /app/requirements-ml.txt

# Upgrade pip and prepare cache (cache persists across builds)
RUN --mount=type=cache,target=/root/.cache/pip \
    python -m pip install --upgrade pip wheel

# Install heavy ML deps (rarely change) with cache
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install -r requirements-ml.txt

# Install regular deps with cache
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install -r requirements.txt

# Copy application code (typically overridden by a volume in dev)
COPY backend/ /app/backend/

# Optional: run as non-root in dev
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

# Uvicorn with auto-reload
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]